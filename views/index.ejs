
    
    <%- include("header") -%>
    
    <div class="box" id="heading">
      <h1><%= day %></h1>
    </div>

    <div class="box">
      <% for( let index = 0; index < task.length; index++ ) { %>
        <form  action="/delete" method="post">
          <div class="item">  
        <input type="checkbox" value="<%= day %><%= index %>" name="checkbox" onchange="this.form.submit()"/>
        <p><%= task[index] %></p>
      </div>
        </form>
      
      <% } %>

      <form class="item" action="/" method="post">
      <input name="taskToAdd" type="text" placeholder="New Item" required/>
      <button type="submit" name="list" value="<%= day %>">+</button>
    </form>
    </div>
    
    

