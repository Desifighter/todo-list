
    
    <%- include("header") -%>
    
    <div class="box" id="heading">
      <h1><%= day %></h1>
    </div>

    <div class="box">
      <% for( let index = 0; index < task.length; index++ ) { %>

      <div class="item">
        <input type="checkbox" />
        <p><%=task[index] %></p>
      </div>
      <% } %>

      <form class="item" action="/" method="post">
      <input name="taskToAdd" type="text" placeholder="New Item" />
      <button type="submit" name="list" value="<%= day %>">+</button>
    </form>
    </div>
    
    <%- include("footer") -%>
      
 